<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择你的年级:"
        />
    <RadioGroup
        android:id="@+id/radiogroup_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <RadioButton
            android:id="@+id/button_grade1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade_one" />

        <RadioButton
            android:id="@+id/button_grade2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade_two" />

        <RadioButton
            android:id="@+id/button_grade3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade_three" />

        <RadioButton
            android:id="@+id/button_grade4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade_four" />

    </RadioGroup>

    <Button
        android:id="@+id/button_submit"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="提交"
        android:textColor="#000000"
        android:background="#5CBA98"
        />

</LinearLayout>